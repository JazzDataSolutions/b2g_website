@startuml
' Definici√≥n de clases (entidades)

class DimProducto {
  +Integer id
  +String nombre
  +String categoria
  +Integer stock
  +Numeric precio
  +DateTime created_at
  +DateTime updated_at
}

class DimCliente {
  +Integer id
  +String nombre
  +String email
  +String telefono
  +String direccion
  +String segmento
  +DateTime created_at
  +DateTime updated_at
}

class DimUsuario {
  +Integer id
  +String username
  +String rol
  +DateTime created_at
  +DateTime updated_at
}

class DimTiempo {
  +Date fecha
  +Integer dia
  +Integer mes
  +Integer anio
  +Integer trimestre
  +Boolean es_fin_de_semana
}

class HechoVentas {
  +Integer id
  +Integer producto_id
  +Integer cliente_id
  +Integer usuario_id
  +Date fecha
  +Integer cantidad
  +Numeric monto
  +String tipo
  +String canal
  +String metodo_pago
  +DateTime created_at
  +DateTime updated_at
}

class Gastos {
  +Integer id
  +Integer usuario_id
  +String descripcion
  +Numeric monto
  +DateTime fecha
  +DateTime created_at
  +DateTime updated_at
}

' Relaciones entre entidades

DimProducto "1" <-- "0..*" HechoVentas : "se utiliza en"
DimCliente "1" <-- "0..*" HechoVentas : "compra/venta"
DimUsuario "1" <-- "0..*" HechoVentas : "gestionado por"
DimTiempo "1" <-- "0..*" HechoVentas : "registrado en"

DimUsuario "1" <-- "0..*" Gastos : "registra"
