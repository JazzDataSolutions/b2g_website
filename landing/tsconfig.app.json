{
  "compilerOptions": {
    "composite": true,
    "declaration": true,         // para generar los .d.ts
    "emitDeclarationOnly": false, // permite emitir el .js además de los .d.ts (o ajusta según lo que necesites)
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
